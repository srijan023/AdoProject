@{
ViewData["Title"] = "Student Data";
}

@model List<Student>

  <div class="text-center">
    <table class="table table-striped ">
      <thead>
        <tr>
          <th>ID</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Gender</th>
          <th>Date of Birth</th>
          <th>Address</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        @foreach(var item in Model){
        <tr>
          <td>@item.Id</td>
          <td>@item.FirstName</td>
          <td>@item.LastName</td>
          <td>@item.Sex</td>
          <td>@item.DateOfBirth.ToShortDateString()</td>
          <td>@item.Address</td>
          <td>
            <form asp-action="Delete" method="post" asp-route-id="@item.Id">
              <button class="btn btn-danger">Delete</button>
            </form>
          </td>
        </tr>
        }
      </tbody>
    </table>
  </div>
